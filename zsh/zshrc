  alias python='python3'
  # Install Ruby Gems to ~/gems
  export GEM_HOME="$HOME/gems"
  export PATH="$HOME/gems/bin:$PATH"
  export PATH="$PATH:$HOME/bin"

  # >>> conda initialize >>>
  # !! Contents within this block are managed by 'conda init' !!
  __conda_setup="$('/home/xcsong/tools/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
  if [ $? -eq 0 ]; then
      eval "$__conda_setup"
  else
      if [ -f "/home/xcsong/tools/anaconda3/etc/profile.d/conda.sh" ]; then
          . "/home/xcsong/tools/anaconda3/etc/profile.d/conda.sh"
      else
          export PATH="/home/xcsong/tools/anaconda3/bin:$PATH"
      fi
  fi
  unset __conda_setup
  # <<< conda initialize <<<
fi

