  # >>> conda initialize >>>
  # !! Contents within this block are managed by 'conda init' !!
  __conda_setup="$('/workspace/cpfs-data/framework/espnet/tools/anaconda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
  if [ $? -eq 0 ]; then
      eval "$__conda_setup"
  else
      if [ -f "/workspace/cpfs-data/framework/espnet/tools/anaconda/etc/profile.d/conda.sh" ]; then
          . "/workspace/cpfs-data/framework/espnet/tools/anaconda/etc/profile.d/conda.sh"
      else
          export PATH="/workspace/cpfs-data/framework/espnet/tools/anaconda//bin:$PATH"
      fi
  fi
  unset __conda_setup
  # <<< conda initialize <<<
fi

